# Update the Homebrew
update

# Update the installed formula
upgrade

# Install GNU Core utilities(Replaces BSD Coreutils with GNU Coreutils)
install coreutils
install moreutils
install findutils

# Install Bash 4
install bash

# Install wget
install wget --enable-iri

# Install MacVim
install macvim --override-system-vi
install homebrew/dupes/grep

# PHP 5.5
tap homebrew/php
tap homebrew/dupes

install php55 
install php55-xdebug

